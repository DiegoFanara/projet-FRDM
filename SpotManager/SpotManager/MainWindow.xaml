<Window x:Class="SpotManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotManager"
        mc:Ignorable="d"
        Title="MainWindow" Width="400" Height="370" Background="Gray">
    <Grid>
        <StackPanel>
            <Grid Background="#2E3B4E">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="/logo_64px.png" Width="64" Margin="16" />
                <Label Foreground="White" Grid.Column="1" Content="Spot Manager" FontSize="35" FontFamily="Artifakt Element Black" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold"/>
            </Grid>
            <Separator Background="White"/>
            <StackPanel>
                <Label Content="Numéro d'Admission" Margin="60,20,60,0" Padding="6"/>
                <TextBox FontSize="12" TextAlignment="Left" Margin="60,0,60,0" Padding="6" Background="LightGray"/>
                <Label Content="Mot de Passe" Margin="60,20,60,0" Padding="6"/>
                <TextBox FontSize="12" TextAlignment="Left" Margin="60,0,60,0" Padding="6" Background="LightGray"/>
                <Button Content="se connecter" FontSize="15" Padding="6" HorizontalAlignment="Center" Margin="20,20,20,20" Click="seConnecter" />
            </StackPanel>
        </StackPanel>



    </Grid>
</Window>
