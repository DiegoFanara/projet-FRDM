<Window x:Class="SpotManager.WindowReservationLocal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotManager"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="WindowReservationLocal" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="93"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Gray" BorderThickness="1" Margin="8" Padding="2,2,2,2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="Date" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="Début" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
                <Label Content="Fin" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2"/>
                <DatePicker Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <xctk:TimePicker Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Gray"/>
                <xctk:TimePicker Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <RadioButton Content="S-013"/>
            <RadioButton Content="S-021" Grid.Row="1"/>
            <RadioButton Content="S-027" Grid.Row="2"/>
            <RadioButton Content="S-028" Grid.Row="3"/>
        </Grid>
        <Border BorderBrush="Gray" Background="LightGray" BorderThickness="1" Margin="8" Padding="2,2,2,2" Grid.Row="2">
            <Label Content="Ceci va annuler la reservation de X personne" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annuler" Width="80" Height="24" Margin="0,0,8,8" Click="annulerBtn"/>
            <Button Content="Reserver" Height="24" Width="80" Margin="0,0,8,8"/>
        </StackPanel>
    </Grid>
</Window>
